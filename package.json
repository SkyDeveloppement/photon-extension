{
  "name": "photon-extension",
  "displayName": "Photon Extension",
  "description": "An extension for the coding in photon with the syntaxic coloration, icon, snippets and a command for load project",
  "publisher": "SkyDeveloppement",
  "version": "0.0.6",
  "icon": "icon/photon-icon.png",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "snippets": [
      {
          "language": "photon",
          "path": "./snippets/snippets.json"
      }
    ],
    "commands": [
      {
        "command": "photon.createProject",
        "title": "Create a Photon Project",
        "icon": {
          "light": "resources/light/create-project.svg",
          "dark": "resources/dark/create-project.svg"
        }
      }
    ],    
    "languages": [{
      "id": "photon",
      "aliases": ["Photon", "photon"],
      "extensions": [".photon"],
      "configuration": "./language-configuration.json",
      "icon": {
        "dark": "icon/photon-icon.png",
        "light": "icon/photon-icon.png"
      }
    }],
    "grammars": [{
      "language": "photon",
      "scopeName": "source.photon",
      "path": "./syntaxes/photon.tmLanguage.json"
    }],
    "themes": [
      {
        "label": "Photon",
        "uiTheme": "vs-dark",
        "path": "./themes/photon-color-theme.json"
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SkyDeveloppement/Photon"
  },  
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.87.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9"
  }
}
